<h1>Listing meetings</h1>

<table>
  <tr>
    <th>When</th>
    <th>Place</th>
    <th>Actions</th>
  </tr>

<% @meetings.each do |meeting| %>
  <tr>
    <td><%= meeting.meeting_at %></td>
    <td><%= link_to meeting.place.name, places_path %></td>
    <td><%= link_to 'Show', meeting %> <%= link_to 'Edit', edit_meeting_path(meeting) %> <%= link_to 'Destroy', meeting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Meeting', new_meeting_path %>
